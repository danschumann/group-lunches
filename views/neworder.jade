extends layout

block content
  
  h1 Add Your Order
  form(action='/post_order',method='post')
    fieldset(data-role='controlgroup')
      input(type='hidden', name='lunch_id', value="#{lunch_id}")
      div
        label.block(for='yourname') Your Name
        input.block(id='yourname', type='text', value='', placeholder='Shahrukh Kahn', name='yourname')
      div
        label.block(for='item_number') Item#
        input.block(id='item_number',type='text',value='',placeholder='ex: L5',name='item_number')
      div
        label.block(for='name') Menu Name
        input.block(id='name',type='text',value='',placeholder='ex: chicken sandwich',name='name')
      div
        label.block(for='price') Price
        input.block(id='price',type='text',value='',placeholder='ex: 5.99',name='price')
      div(data-role='fieldcontain')
        input(type='submit',value='Add',data-transition='fade', data-theme='c')
