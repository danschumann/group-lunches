extends layout

block content
  h1 Add Your Order
  form(action='/post_order',method='post')
    fieldset(data-role='controlgroup')
      input(type='hidden', name='lunch_id', value="#{lunch_id}")
      input(id='item_number',type='text',value='',placeholder='ex: L5',name='item_number')
      input(id='name',type='text',value='',placeholder='ex: chicken sandwich',name='name')
      input(id='price',type='text',value='',placeholder='ex: 5.99',name='price')
      div(data-role='fieldcontain')
        input(type='submit',value='Add',data-transition='fade', data-theme='c')
