extends layout

block content
  p Group Lunch: #{title}

  - if ((orders || {}).length)
    table.orderTable
      thead
        td Name
        td Order
        td Price
      -for (var i = 0; i < orders.length; i++)
        - order = orders[i]
        tr
          td= order.item_number
          td= order.name
          td= order.price
    
  p
    a(href="/grouplunch/#{id}/neworder") Add your order
