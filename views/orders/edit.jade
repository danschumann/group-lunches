extends ../layout

block content
  
  - url = '/lunches/' + lunch.id + '/orders'
  - user = ''
  - description = ''
  - if (order)
    - url += '/' + order.id
    - user = order.user
    - description = order.description

  h1 Add Your Order

  form(action="#{url}", method='post', class='order-form')
    fieldset(data-role='controlgroup')

      input(type='hidden', name='lunch_id', value="#{lunch_id}")
      div.orderInput
        input(id='user', type='text', value='#{user}', placeholder='name', name='user')
        input(id='description', type='text', value='#{description}', placeholder='order', name='description')
      div(data-role='fieldcontain')
        input(type='submit',value='Add',data-transition='fade', data-theme='c', class='button')
