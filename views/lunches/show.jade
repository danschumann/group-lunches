extends ../layout

block head
  -var title = attributes.title

block content 
  - if (attributes.menu_url)
    h1 Restaurant: 
      a(href="#{attributes.menu_url}" target="_blank") #{attributes.title}
  - else
    h1 Restaurant: #{attributes.title}
    

  - if ((orders || {}).length)
    table.display-table
      thead
        th Order for
        th Order
      -for (var i = 0; i < orders.length; i++)
        - var order = orders[i]
        tr
          td= order.user
          td= order.description
    
  p
    - if (existing)
        a(href="/lunches/#{attributes.id}/orders/#{existing.id}", class='button') Edit order
        a(href="/lunches/#{attributes.id}/orders/new", class='button') New order
    - else
      a(href="/lunches/#{attributes.id}/orders/new", class='button') New order
