extends ../layout

block content 
  - if (attributes.menu_url)
    h1 Restaurant: 
      a(href="#{attributes.menu_url}") #{attributes.title}
  - else
    h1 Restaurant: #{attributes.title}
    

  - if ((orders || {}).length)
    table.orderTable
      thead
        td Name
        td Order
        td Price
      -for (var i = 0; i < orders.length; i++)
        - order = orders[i]
        tr
          td= order.item_number
          td= order.name
          td= order.price
    
  p
    - if (existing)
      div
        a(href="/lunches/#{attributes.id}/orders/#{existing.id}") Edit your order
      div
        a(href="/lunches/#{attributes.id}/orders/new") Add new item order
    - else
      a(href="/lunches/#{attributes.id}/orders/new") Add your order
